# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the user list
GET         /                        controllers.HomeController.index()

# User login and signup from web interface
GET         /login                   controllers.UserController.showLoginForm()
POST        /login                   controllers.UserController.login()
GET         /signup                  controllers.UserController.showSignupForm()
POST        /signup                  controllers.UserController.signup()
GET         /logout                  controllers.UserController.logout()

# User Profile
GET         /profile                 controllers.HomeController.showProfile()
POST        /profile                 controllers.HomeController.updateProfileWeb()

# User Profile API
POST        /api/profile             controllers.HomeController.updateProfileAPI()

#My Papers Page
GET         /papers                  controllers.PaperController.getPapers()
#not implemented yet
POST        /papers/upload           controllers.PaperController.uploadPaper(id: Long)
GET         /papers/download         controllers.PaperController.downloadPaper(id: Long)
GET         /papers/edit             controllers.PaperController.editPaper(id: Long)


# Create user via API
POST /api/users                      controllers.UserController.create()
# Returns user by name
GET /api/users/:name                 controllers.UserController.getByName(name)

# get paper info by paper id
GET /api/papers/:id                  controllers.PaperController.getPaper(id: Long)
# get authors for paper id
GET /api/papers/authors/:id          controllers.PaperController.getAuthors(id: Long)
# get all papers or papers for user_id
GET /api/papers                      controllers.PaperController.getAllPapers()

# Routes from application template. To be removed.
# users list (look at the default values for pagination parameters)
GET         /users                   controllers.HomeController.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add user
GET         /users/new               controllers.HomeController.create()
POST        /users                   controllers.HomeController.save()

# Edit existing user
GET         /users/:id               controllers.HomeController.edit(id:Long)
POST        /users/:id               controllers.HomeController.update(id:Long)

# Delete a user
POST        /users/:id/delete        controllers.HomeController.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
