# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the user list
GET         /                        controllers.HomeController.index()

# users list (look at the default values for pagination parameters)
GET         /users                   controllers.HomeController.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add user
GET         /users/new               controllers.HomeController.create()
POST        /users                   controllers.HomeController.save()

# Edit existing user
GET         /users/:id               controllers.HomeController.edit(id:Long)
POST        /users/:id               controllers.HomeController.update(id:Long)

# Delete a user
POST        /users/:id/delete        controllers.HomeController.delete(id:Long)

GET         /login                   controllers.UserController.showLoginForm()
POST        /login                   controllers.UserController.login()
GET         /signup                  controllers.UserController.showSignupForm()
POST        /signup                  controllers.UserController.signup()
GET        /logout                  controllers.UserController.logout()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
